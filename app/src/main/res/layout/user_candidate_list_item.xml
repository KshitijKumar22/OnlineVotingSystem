<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/featured_img1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user1"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="-7dp" />

        <TextView
            android:id="@+id/tvCandidateItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Varun Tiwari"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:id="@+id/tvPollitemNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/tvAddCandidateDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dob"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="238dp" />

        <TextView
            android:id="@+id/tvPollitemCandidateNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poll"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="233dp" />

        <TextView
            android:id="@+id/tvPollitemAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7878787878787"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/tvAddCandidateSymbolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol Name"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="148dp" />

        <ImageView
            android:id="@+id/tvAddCandidatePartySymbol"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@color/banner_background"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="-4dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>